<h1>Product Masters</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @product_masters.each do |product_master| %>
      <tr>
        <td><%= product_master.name %></td>
        <td><%= product_master.description %></td>
        <td><%= product_master.price %></td>
        <td><%= product_master.brand.name %></td>
        <td><%= link_to 'Show', product_master %></td>
        <td><%= link_to 'Edit', edit_product_master_path(product_master) %></td>
        <td>
  <%= form_with(model: product_master, method: :delete, data: { confirm: 'Are you sure?' }, local: false) do |form| %>
    <%= form.submit 'Destroy', class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <% end %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Product Master', new_product_master_path %>
