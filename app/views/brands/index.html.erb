<h1>Brands</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td>
  <%= form_with(model: brand, method: :delete, data: { confirm: 'Are you sure?' }, local: false) do |form| %>
    <%= form.submit 'Destroy', class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <% end %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Brand', new_brand_path %>
