<h1>Product Categories</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.product_master.name %></td>
        <td><%= product_category.category.name %></td>
        <td><%= link_to 'Show', product_category %></td>
        <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
        <td>
  <%= form_with(model: product_category, method: :delete, data: { confirm: 'Are you sure?' }, local: false) do |form| %>
    <%= form.submit 'Destroy', class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <% end %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Product Category', new_product_category_path %>
