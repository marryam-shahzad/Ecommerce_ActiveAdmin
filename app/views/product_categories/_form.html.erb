<%= form_with(model: @product_category, local: true) do |form| %>
  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_category.errors.count, "error") %> prohibited this product category from being saved:</h2>

      <ul>
        <% product_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_master_id %>
    <%= form.collection_select :product_master_id, ProductMaster.all, :id, :name, prompt: 'Select a product' %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: 'Select a category' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
