<%= form_with(model: @retailer_product, local: true) do |form| %>
  <% if @retailer_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(retailer_product.errors.count, "error") %> prohibited this retailer product from being saved:</h2>

      <ul>
        <% retailer_product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_master_id %>
    <%= form.collection_select :product_master_id, ProductMaster.all, :id, :name, prompt: 'Select a product' %>
  </div>

  <div class="field">
    <%= form.label :retailer_id %>
    <%= form.collection_select :retailer_id, Retailer.all, :id, :name, prompt: 'Select a retailer' %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
